@model IEnumerable<KutuphaneOtomasyonu.Models.SureliYayin>

@{
    ViewData["Title"] = "Süreli Yayınlar";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 card-margin">
            <div class="card search-form">
                <div class="card-body p-0">
                    <form id="search-form" asp-controller="SureliYayin" asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-12">
                                <div class="row no-gutters">
                                    <div class="col-lg-10 col-md-8 col-sm-12 p-0">
                                        <input type="text" placeholder="Aramanızı giriniz..." class="form-control" id="search" name="SearchString">
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-12 p-0">
                                        <button type="submit" class="btn btn-base" value="filter">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




@await Component.InvokeAsync("ListSureliYayin", new { searchString = TempData["searchString"] })

